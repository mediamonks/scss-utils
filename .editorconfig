# http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
quote_type = single
insert_final_newline = true
end_of_line = lf
max_line_length = 100

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2
